@model UspgPOS.Models.Marca

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Marca</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">Imagen</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.img_url))
            {
                <img src="@Model.img_url" alt="Imagen del producto" style="width: 100px; height: 100px;" />

            }
            else
            {
                <p>No hay imagen disponible</p>

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
